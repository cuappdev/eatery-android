<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".loginviews.AccountInfoFragment">

    <TextView
        android:id="@+id/accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wash"
        android:paddingStart="15dp"
        android:paddingTop="28dp"
        android:paddingEnd="15dp"
        android:paddingBottom="12dp"
        android:text="@string/accounts"
        android:textColor="@color/primary"
        android:textSize="@dimen/account_info_header_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/swipesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:text="@string/meal_swipes"
            android:textColor="@color/primary"
            android:textSize="@dimen/account_info_attributes_text_size" />

        <TextView
            android:id="@+id/swipesValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/account_info_attributes_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brbText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/brbs"
            android:textColor="@color/primary"
            android:textSize="@dimen/account_info_attributes_text_size" />

        <TextView
            android:id="@+id/brbValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/account_info_attributes_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cityBucksText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/city_bucks"
            android:textColor="@color/primary"
            android:textSize="@dimen/account_info_attributes_text_size" />

        <TextView
            android:id="@+id/cityBucksValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/account_info_attributes_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/laundryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:text="@string/laundry"
            android:textColor="@color/primary"
            android:textSize="@dimen/account_info_attributes_text_size" />

        <TextView
            android:id="@+id/laundryValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:text=""
            android:textColor="@color/secondary"
            android:textSize="@dimen/account_info_attributes_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wash"
        android:paddingStart="16dp"
        android:paddingTop="28dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:text="@string/history"
        android:textColor="@color/primary"
        android:textSize="@dimen/account_info_header_text_size"
        android:textStyle="bold" />
</LinearLayout>