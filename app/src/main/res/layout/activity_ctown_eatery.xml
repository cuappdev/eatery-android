<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wash"
    android:fitsSystemWindows="true"
    tools:context="com.cornellappdev.android.eatery.CtownMenuActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="275dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/blue"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginTop="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/ind_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:fitsSystemWindows="true"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/wash"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/infobox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ind_image"
                android:background="@color/white"
                android:elevation="1dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/ind_cafe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="2dp"
                    android:text="Name"
                    android:textColor="@color/primary"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/ind_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ind_cafe_name"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="9dp"
                    android:text="Open?"
                    android:textColor="@color/primary"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ind_cafe_name"
                    android:layout_toRightOf="@id/ind_open"
                    android:fontFamily="sans-serif-regular"
                    android:paddingLeft="4dp"
                    android:paddingBottom="9dp"
                    android:text="Time"
                    android:textColor="@color/secondary"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ind_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ind_open"
                    android:fontFamily="sans-serif-medium"
                    android:text="Location"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/dollar_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/dollar_icon"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
                android:id="@+id/cafe_directions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="15dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:text="Get Directions"
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cafe_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="1dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cafe_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="1dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="16sp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/cafe_map"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                >
            </com.google.android.gms.maps.MapView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
