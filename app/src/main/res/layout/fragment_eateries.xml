<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/scrollView"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="60dp"
  android:background="@color/colorWhite">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <HorizontalScrollView
      android:id="@+id/horizontalScrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="true"
      android:background="@color/colorWhite"
      android:scrollbars="none"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">
        <com.cornellappdev.android.eatery.component.HideUnselectedChipGroup
          android:id="@+id/campusAreaChipGroup"
          style="@style/GroupedChipGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:animateLayoutChanges="true"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="@+id/cafe_list"
          app:layout_constraintTop_toTopOf="@+id/cafe_list"
          app:singleLine="true"
          app:singleSelection="true">
          <com.google.android.material.chip.Chip
            android:id="@+id/northButton"
            style="@style/GroupedChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_north"
            app:checkedIconEnabled="true"
            app:closeIconEnabled="false"/>
          <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:background="@drawable/chip_group_divider"/>
          <com.google.android.material.chip.Chip
            android:id="@+id/westButton"
            style="@style/GroupedChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_west"
            app:checkedIconEnabled="true"
            app:closeIconEnabled="false"/>
          <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:background="@drawable/chip_group_divider"/>
          <com.google.android.material.chip.Chip
            android:id="@+id/centralButton"
            style="@style/GroupedChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area_central"
            app:checkedIconEnabled="true"
            app:closeIconEnabled="false"/>
        </com.cornellappdev.android.eatery.component.HideUnselectedChipGroup>
        <com.cornellappdev.android.eatery.component.HideUnselectedChipGroup
          android:id="@+id/paymentChipGroup"
          style="@style/GroupedChipGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:animateLayoutChanges="true"
          app:layout_constraintStart_toEndOf="@+id/campusAreaChipGroup"
          app:layout_constraintTop_toTopOf="@+id/campusAreaChipGroup"
          app:singleLine="true"
          app:singleSelection="true">
          <com.google.android.material.chip.Chip
            android:id="@+id/brbButton"
            style="@style/GroupedChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_brb"
            app:checkedIconEnabled="true"
            app:closeIconEnabled="false"/>
          <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:background="@drawable/chip_group_divider"/>
          <com.google.android.material.chip.Chip
            android:id="@+id/swipesButton"
            style="@style/GroupedChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/payment_swipes"
            app:checkedIconEnabled="true"
            app:closeIconEnabled="false"/>
        </com.cornellappdev.android.eatery.component.HideUnselectedChipGroup>
      </LinearLayout>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/cafe_list"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@color/colorWhite"
      android:clipToPadding="false"
      android:nestedScrollingEnabled="false"
      android:visibility="visible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
