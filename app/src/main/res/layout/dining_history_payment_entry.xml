<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <variable
      name="historyEntry"
      type="com.cornellappdev.android.eatery.page.brb.HistoryEntry"/>
  </data>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/purchaseNameText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@{historyEntry.description}"/>
    <TextView
      android:id="@+id/purchaseLocationText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Unknown Location"/>
    <TextView
      android:id="@+id/purchaseAmountText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@{historyEntry.timestamp}"/>
  </LinearLayout>
</layout>