<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jc.eatery_android.MainActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/northButton"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/button"
                        android:gravity="center_horizontal"
                        android:onClick="filterClick"
                        android:padding="8dp"
                        android:text="North"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/westButton"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"

                        android:background="@drawable/button"

                        android:gravity="center_horizontal"
                        android:onClick="filterClick"
                        android:padding="8dp"
                        android:text="West"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/centralButton"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center_horizontal"
                        android:onClick="filterClick"
                        android:padding="8dp"
                        android:background="@drawable/button"
                        android:text="Central"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:textSize="15sp" />
                    <Button
                        android:id="@+id/swipes"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/button"
                        android:gravity="center_horizontal"
                        android:onClick="filterClick"
                        android:padding="8dp"
                        android:text="Swipes"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                    <Button
                        android:id="@+id/brb"
                        android:layout_width="65dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/button"
                        android:gravity="center_horizontal"
                        android:onClick="filterClick"
                        android:padding="8dp"
                        android:text="BRB"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                </LinearLayout>
            </HorizontalScrollView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cafe_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/scroll"
                android:clipToPadding="false"
                android:onClick="filterClick"
                android:nestedScrollingEnabled="false"/>
        </RelativeLayout>
    </ScrollView>

</android.widget.RelativeLayout>
