<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffff"
  android:fitsSystemWindows="true"
  tools:context="com.cornellappdev.android.eatery.MenuActivity">
  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="275dp">
    <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
      android:id="@+id/collapsing_toolbar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:contentScrim="#4e80bd"
      app:expandedTitleGravity="top"
      app:expandedTitleMarginStart="48dp"
      app:expandedTitleMarginTop="64dp"
      app:layout_scrollFlags="scroll|exitUntilCollapsed">
      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ind_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"/>
      <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:layout_collapseMode="pin"/>
    </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>
  </com.google.android.material.appbar.AppBarLayout>
  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#f2f2f2"
      android:orientation="vertical">
      <RelativeLayout
        android:id="@+id/infobox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ind_image"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:elevation="1dp">
        <TextView
          android:id="@+id/ind_cafe_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="2dp"
          android:fontFamily="sans-serif-medium"
          android:text="Name"
          android:textColor="#DE000000"
          android:textSize="18dp"/>
        <TextView
          android:id="@+id/ind_open"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ind_cafe_name"
          android:paddingBottom="9dp"
          android:fontFamily="sans-serif-medium"
          android:text="Open?"
          android:textColor="#000000"
          android:textSize="14dp"/>
        <TextView
          android:id="@+id/ind_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ind_cafe_name"
          android:layout_toRightOf="@id/ind_open"
          android:paddingBottom="9dp"
          android:paddingLeft="4dp"
          android:fontFamily="sans-serif-regular"
          android:text="Time"
          android:textColor="#61000000"
          android:textSize="14dp"/>
        <TextView
          android:id="@+id/ind_loc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ind_open"
          android:fontFamily="sans-serif-medium"
          android:text="Location"
          android:textColor="#DE000000"
          android:textSize="14sp"/>
        <ImageView
          android:id="@+id/dollar_icon"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginRight="16dp"
          android:layout_alignParentRight="true"
          android:src="@drawable/dollar_icon"
          android:visibility="visible"/>
        <ImageView
          android:id="@+id/brb_icon"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginRight="42dp"
          android:layout_alignParentRight="true"
          android:src="@drawable/brb_icon"
          android:visibility="gone"/>
        <ImageView
          android:id="@+id/swipe_icon"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginRight="68dp"
          android:layout_alignParentRight="true"
          android:src="@drawable/swipe_icon"
          android:visibility="gone"/>
      </RelativeLayout>
      <TextView
        android:id="@+id/ind_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/infobox"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="2dp"
        android:text="Menu"
        android:textColor="#de000000"
        android:textSize="16dp"/>
      <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ind_menu"
        android:background="#ffffff"
        android:orientation="vertical"/>
      <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/ind_menu"
        android:background="#ffffff"
        app:tabIndicatorColor="#4e80bd"
        app:tabTextAppearance="@style/tabLayoutText"/>
      <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabs"
        android:background="#ffffff"/>
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
