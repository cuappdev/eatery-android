<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cafe_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/my_drawable"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_image"
                android:id="@+id/cafe_name"
                android:text="Location"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_name"
                android:text="Open"
                android:id="@+id/cafe_open"
                android:paddingLeft="12dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_name"
                android:layout_toRightOf="@id/cafe_open"
                android:text="Time"
                android:id="@+id/cafe_time"
                android:paddingLeft="8dp"
                android:textSize="14sp" />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toRightOf="@id/cafe_name"-->
                <!--android:layout_below="@id/cafe_name"-->
                <!--android:text="0 mi"-->
                <!--android:id="@+id/cafe_mile"-->
                <!--android:gravity="right"-->
                <!--android:paddingRight="16dp"-->
                <!--android:textSize="14sp" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>