<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:padding="4dp"
    android:background="#f2f2f2">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cafe_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/my_drawable"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_image"
                android:id="@+id/cafe_name"
                android:text="Location"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/primary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_name"
                android:text="Open"
                android:id="@+id/cafe_open"
                android:paddingLeft="10dp"
                android:paddingBottom="6dp"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cafe_name"
                android:layout_toRightOf="@id/cafe_open"
                android:text="Time"
                android:id="@+id/cafe_time"
                android:paddingLeft="8dp"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_below="@id/cafe_open"
                android:id="@+id/cardviewStatus"
                android:background="#d5e0e0e0" />
