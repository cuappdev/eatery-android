<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wait_time_graph"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/wait_time_horizontal_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/inactive" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wait_time_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wait_time_horizontal_divider"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/wait_time_x_axis_ticks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wait_time_x_axis_line"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/wait_time_tick_6a"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/wait_time_tick_9a"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/wait_time_tick_12p"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/wait_time_tick_3p"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/wait_time_tick_6p"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/wait_time_tick_9p"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/wait_time_tick_12a"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/wait_time_tick_3a"
                android:layout_width="2dp"
                android:layout_height="8dp"
                android:background="@color/inactive" />

            <View
                android:layout_width="14dp"
                android:layout_height="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wait_time_x_axis_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wait_time_x_axis_ticks"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_6am_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_9am_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_12pm_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_3pm_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_6pm_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_9pm_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_12am_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/time_3am_label"
                android:textColor="@color/secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/wait_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="@string/popular_times_label"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wait_time_show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/wait_time_label"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:fontFamily="sans-serif-medium"
            android:text="@string/hide_label"
            android:textColor="@color/secondary"
            android:textSize="18sp" />

        <View
            android:id="@+id/wait_time_x_axis_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/wait_time_chart"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:animateLayoutChanges="true"
            android:background="@color/inactive" />

        <com.cornellappdev.android.eatery.components.WaitTimesChart
            android:id="@+id/wait_time_chart"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_below="@id/wait_time_label"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:animateLayoutChanges="true" />

    </RelativeLayout>

</RelativeLayout>