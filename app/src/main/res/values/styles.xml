<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/brand</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored"/>

  <style name="AppTheme.Colored" parent="Widget.AppCompat.Button.Colored"/>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
    <item name="textAllCaps">false</item>
  </style>

  <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="actionMenuTextColor">#cdcdcd</item>
    <item name="colorPrimary">#4B7FBE</item>
    <item name="colorControlNormal">#ffffff</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="collapsingToolbarLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
    <item name="android:textColor">#ffffff</item>
    <item name="android:textSize">20dp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="tabLayoutText" parent="@android:style/TextAppearance.Widget.TabWidget">
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#57000000</item>
  </style>

  <style id="closedStatusTextStyle" name="closedStatusText">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/red</item>
  </style>

  <style name="openStatusText">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/green</item>
  </style>
</resources>
