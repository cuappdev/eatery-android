<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context="com.cornellappdev.android.eatery.MenuActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:id="@+id/appbar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="#4e80bd"
            android:id="@+id/collapsing_toolbar"
            app:expandedTitleGravity="top"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginTop="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ind_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f2f2f2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infobox"
            android:elevation="1dp"
            android:layout_below="@id/ind_image"
            android:background="#ffffff"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:paddingBottom="2dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#DE000000"
                android:id="@+id/ind_cafe_name"
                android:text="Name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ind_cafe_name"
                android:textSize="14dp"
                android:paddingBottom="9dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:id="@+id/ind_open"
                android:text="Open?"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ind_cafe_name"
                android:textSize="14dp"
                android:paddingLeft="4dp"
                android:paddingBottom="9dp"
                android:layout_toRightOf="@id/ind_open"
                android:fontFamily="sans-serif-regular"
                android:textColor="#61000000"
                android:id="@+id/ind_time"
                android:text="Time"/>
            <TextView
                android:id="@+id/ind_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ind_open"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#DE000000"
                android:text="Location" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/dollar_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:visibility="visible"
                android:src="@drawable/dollar_icon"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/brb_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="42dp"
                android:visibility="gone"
                android:src="@drawable/brb_icon"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/swipe_icon"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="68dp"
                android:src="@drawable/swipe_icon" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:layout_below="@id/infobox"
            android:textColor="#de000000"
            android:background="#ffffff"
            android:layout_marginTop="12dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="16dp"
            android:id="@+id/ind_menu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:background="#ffffff"
            android:layout_below="@id/ind_menu"
            android:orientation="vertical" />
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_marginTop="12dp"
            android:layout_below="@id/ind_menu"
            android:layout_width="match_parent"
            android:background="#ffffff"
            app:tabTextAppearance="@style/tabLayoutText"
            app:tabIndicatorColor="#4e80bd"
            android:layout_height="wrap_content"/>
        <com.cornellappdev.android.eatery.CustomPager
            android:id="@+id/pager"
            android:layout_below="@id/tabs"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
